<resources>

    <style name="Theme.GitHubUser" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color_1</item>
        <item name="colorPrimaryVariant">@color/primary_color_1</item>
        <item name="android:statusBarColor">@color/primary_color_1</item>
        <item name="titleTextColor">@color/secondary_color_2</item>
        <item name="fontFamily">@font/mukta_bold</item>
    </style>

    <style name="TextToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mukta_bold</item>
        <item name="android:textColor">@color/primary_color_1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMainUser">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mukta_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextDetailUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mukta_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextDetailUser.ColorPrimary1">
        <item name="android:textColor">@color/primary_color_1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/data_number</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextDetailUser.ColorSecondary1">
        <item name="android:textColor">@color/secondary_color_1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ImgSplashScreen">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:src">@drawable/ic_logo_github_mark</item>
    </style>
    
</resources>